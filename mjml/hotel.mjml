      .hotel-card {
      width: 100%;
      border-radius: 8px;
      background-color: #F7F4FB;
      padding: 20px;
      margin-bottom: 20px;
      }

      .hotel-key {
      font-weight: 600;
      line-height: 17px;
      font-size: 14px;
      color: #333333;
      }

      .hotel-value {
      font-weight: 400;
      line-height: 17px;
      font-size: 14px;
      color: #333333;
      }

      .head-group {
